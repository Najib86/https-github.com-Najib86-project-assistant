
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  role        String    @default("student") // 'student' or 'supervisor'
  department  String?
  projects    Project[] @relation("StudentProjects")
  supervises  Project[] @relation("SupervisorProjects")
  comments    Comment[]
  exports     Export[]
  invites     SupervisorInvite[]
  memberships ProjectMember[]
  chapterEdits ChapterVersion[]
  createdAt   DateTime  @default(now())
}

model Project {
  project_id     Int          @id @default(autoincrement())
  title          String
  level          String       // UG / PG
  type           String       // Survey / System-Based / Hybrid
  status         String       @default("Draft") // Draft / Submitted / Reviewed / Approved
  student        User         @relation("StudentProjects", fields: [studentId], references: [id])
  studentId      Int
  supervisor     User?        @relation("SupervisorProjects", fields: [supervisorId], references: [id])
  supervisorId   Int?
  chapters       Chapter[]

  questionnaires Questionnaire[]
  comments       Comment[]
  exports        Export[]
  members        ProjectMember[]
  citations      Citation[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  // Context for AI Generation
  objectives     String?      // List of objectives
  problemStatement String?    // Detailed problem statement
  methodology    String?      // Brief methodology description
  referenceText  String?      // Global reference style/content extracted text
}

model Chapter {
  chapter_id   Int       @id @default(autoincrement())
  project      Project   @relation(fields: [projectId], references: [project_id], onDelete: Cascade)
  projectId    Int
  chapterNumber Int
  title        String?
  content      String? // We might want Text or String with large limit
  status       String    @default("Draft") // Draft / Submitted / Reviewed / Approved
  comments     Comment[]
  plagiarismNotes PlagiarismNote[]
  versions     ChapterVersion[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([projectId, chapterNumber])
}


model Comment {
  comment_id   Int       @id @default(autoincrement())
  content      String
  anchorText   String?  // Text selected for comment
  positionIndex Int?    // Position in the text
  createdAt    DateTime  @default(now())
  isResolved   Boolean   @default(false)
  
  // Relations
  user         User      @relation(fields: [userId], references: [id])
  userId       Int
  
  project      Project?  @relation(fields: [projectId], references: [project_id])
  projectId    Int?
  
  chapter      Chapter?  @relation(fields: [chapterId], references: [chapter_id])
  chapterId    Int?
}

model Questionnaire {
  questionnaire_id Int      @id @default(autoincrement())
  project          Project  @relation(fields: [projectId], references: [project_id])
  projectId        Int
  section          String
  question         String
  questionType     String   // Likert / Open-ended / Multiple-choice
  createdAt        DateTime @default(now())
}

model Export {
  export_id   Int      @id @default(autoincrement())
  project     Project  @relation(fields: [projectId], references: [project_id])
  projectId   Int
  exportedBy  User     @relation(fields: [exportedById], references: [id])
  exportedById Int
  exportType  String   // DOCX / PDF
  exportedAt  DateTime @default(now())
}

model PlagiarismNote {
  note_id     Int      @id @default(autoincrement())
  chapter     Chapter  @relation(fields: [chapterId], references: [chapter_id])
  chapterId   Int
  note        String
  score       Int      @default(0) // 0-100 similarity score
  createdAt   DateTime @default(now())
}

model SupervisorInvite {
  id           Int      @id @default(autoincrement())
  supervisor   User     @relation(fields: [supervisorId], references: [id])
  supervisorId Int
  code         String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

model ProjectMember {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [project_id])
  projectId Int
  student   User     @relation(fields: [studentId], references: [id])
  studentId Int
  role      String   @default("member") // leader / member
  joinedAt  DateTime @default(now())

  @@unique([projectId, studentId])
}

model ChapterVersion {
  id              Int      @id @default(autoincrement())
  chapter         Chapter  @relation(fields: [chapterId], references: [chapter_id])
  chapterId       Int
  contentSnapshot String?  // Content at time of save
  editedBy        User?    @relation(fields: [editedById], references: [id])
  editedById      Int?
  createdAt       DateTime @default(now())
  versionNumber   Int      @default(1)
}

model Citation {
  id         Int      @id @default(autoincrement())
  project    Project  @relation(fields: [projectId], references: [project_id])
  projectId  Int
  style      String   // APA / MLA / IEEE
  sourceText String
  formatted  String
  createdAt  DateTime @default(now())
}
